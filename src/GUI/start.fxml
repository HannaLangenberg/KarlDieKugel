      <TextField fx:id="namefield" alignment="CENTER" layoutX="340.0" layoutY="169.0" prefHeight="34.0" prefWidth="230.0" promptText="NAME" style="-fx-background-color: #ffffff; -fx-border-color: #000000; -fx-border-radius: 5; -fx-border-width: 3; -fx-background-radius: 10;">
         <font>
            <Font name="Franklin Gothic Demi Cond" size="18.0" />
         </font>
      </TextField>
   </children>
</AnchorPane>
